# ===== GEMINI API CONFIGURATION =====

# Firefox Browser Configuration (Required for headless.py browser automation)
# Use Playwright-managed binary inside Docker
# Use C:\\Users\\<USERNAME>\\AppData\\Local\\ms-playwright\\firefox-1490\\firefox\\firefox.exe for windows
FIREFOX_BIN=/opt/firefox/firefox

# ===== COOKIE AUTHENTICATION (Choose one method) =====
GEMINI_COOKIES=
GEMINI_COOKIES_FILE=

# ===== DOCKER CONFIGURATION =====
DOCKER_CONTAINER=true

# ===== SERVER CONFIGURATION =====
PUBLIC_URL=

# ===== BROWSER CONFIGURATION =====
HEADLESS=true
